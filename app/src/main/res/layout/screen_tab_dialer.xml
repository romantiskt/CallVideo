<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_dark"
            android:gravity="center"
            android:weightSum="2" >

            <EditText
                android:id="@+id/screen_tab_dialer_editText_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3px"
                android:layout_weight="2"
                android:background="@color/color_dark"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/color_white"
                android:textSize="45dp" >
            </EditText>

            <ImageButton
                android:id="@+id/screen_tab_dialer_imageButton_input_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2px"
                android:background="@color/color_white"
                android:src="@drawable/input_numbers" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_keyboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_tab_dialer_linearLayout_info"
            android:layout_margin="3px"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_9"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_star"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />

                <include
                    android:id="@+id/screen_tab_dialer_button_sharp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_video"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />

                <include
                    android:id="@+id/screen_tab_dialer_button_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />

                <include
                    android:id="@+id/screen_tab_dialer_button_del"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>